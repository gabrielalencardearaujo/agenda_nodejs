<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cadastro Consultas</title>

  <!-- Boostrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

  <!-- FullCalendar -->
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>
</head>

<body>

  <main class="container">
    <h1>Agendar Consultas</h1>
    <form action="">
      <label for="name">Nome:</label>
      <input class="form-control mb-4" type="text" name="name" id="name">

      <label for="email">E-mail:</label>
      <input class="form-control mb-4" type="email" name="email" id="email" placeholder="seu.email@email.com">

      <label for="cpf">CPF:</label>
      <input class="form-control mb-4" type="text" name="cpf" id="cpf"
        oninput="formatarCPF(this)">

      <label for="date">Data Consulta:</label>
      <input class="form-control mb-4" type="date" name="date" id="date" placeholder="01/01/2001">

      <label for="date">Hora Consulta:</label>
      <input class="form-control mb-4" type="time" name="time" id="time">

      <label for="describe">Observações:</label>
      <textarea class="form-control mb-4" name="describe" id="describe" rows="6">

      </textarea>
      <button class="btn btn-primary btn-block px-4" type="submit">Agendar</button>
    </form>
  </main>


  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
    integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>

  <script>
    function formatarCPF(campo) {
      let cpf = campo.value.replace(/\D/g, '');
      cpf = cpf.replace(/(\d{3})(\d{3})(\d{3})(\d{2})/, '$1.$2.$3-$4');
      campo.value = cpf;
    }
  </script>
</body>

</html>